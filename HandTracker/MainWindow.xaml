<Window x:Class="HandTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandTracker"
        xmlns:commands="clr-namespace:HandTracker.Commands"
        xmlns:conv="clr-namespace:HandTracker.Converters"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Hand tracker"
        Height="450" Width="800">

    <Window.Resources>
        <conv:Negate x:Key="negate"/>
        <BooleanToVisibilityConverter x:Key="bool2vis"/>
    </Window.Resources>
    
    <Grid>
        <StackPanel Grid.RowSpan="100" Grid.ColumnSpan="100"
                    VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasDevices}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <TextBlock FontSize="46"
                   Foreground="#BBBBBB"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Hand tracking is not available">
            </TextBlock>
            <Separator Margin="12"
                       MaxWidth="892"/>
            <TextBlock FontSize="16"
                       Foreground="#BBBBBB"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"
                       Text="Leap Motion is not installed">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsReady}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock FontSize="16"
                       Foreground="#BBBBBB"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="Visible"
                       Text="No Leap Motion devices attached">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasDevices}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
        
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsReady}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <WrapPanel HorizontalAlignment="Center"
                       Margin="12">
                <Label VerticalAlignment="Center">Device</Label>
                <ComboBox MinWidth="160"
                          Margin="12,0"
                          IsEnabled="{Binding ElementName=tbnToggleDevice, Path=IsChecked, Converter={StaticResource negate}}"
                          ItemsSource="{Binding Devices}"
                          SelectedItem="{Binding SelectedDevice}"/>
                <ToggleButton Name="tbnToggleDevice" IsEnabled="{Binding HasSelectedDevice}"
                              Command="{x:Static commands:ToggleDevice.Instance}" />
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
