<Window x:Class="CameraTouchlessControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CameraTouchlessControl"
        xmlns:commands="clr-namespace:CameraTouchlessControl.Commands"
        xmlns:conv="clr-namespace:CameraTouchlessControl.Converters"
        mc:Ignorable="d"
        DataContext="{Binding Path=ViewModel, RelativeSource={RelativeSource Self}}"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Hand tracker"
        Height="450" Width="800">

    <Window.Resources>
        <conv:Negate x:Key="negate"/>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsHandTrackerReady, Mode=OneWay}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" Grid.Column="0"
                       HorizontalAlignment="Center"
                       Margin="12">
                <Label VerticalAlignment="Center">Tracking device</Label>
                <ComboBox MinWidth="160"
                          Margin="12,0"
                          IsEnabled="{Binding ElementName=tbnToggleTrackingDevice, Path=IsChecked, Converter={StaticResource negate}, Mode=OneWay}"
                          ItemsSource="{Binding HandTrackers, Mode=OneWay}"
                          SelectedItem="{Binding SelectedHandTracker, Mode=OneWay}"/>
                <ToggleButton Name="tbnToggleTrackingDevice"
                              IsEnabled="{Binding HasSelectedHandTracker, Mode=OneWay}"
                              IsChecked="{Binding IsHandTrackingRunning, Mode=OneWay}"
                              Command="{x:Static commands:ToggleHandTracker.Instance}" />
            </WrapPanel>

            <WrapPanel Grid.Row="0" Grid.Column="1"
                       HorizontalAlignment="Center"
                       Margin="12">
                <Label VerticalAlignment="Center">Camera</Label>
                <ComboBox MinWidth="160"
                          Margin="12,0"
                          IsEnabled="{Binding ElementName=tbnToggleCamera, Path=IsChecked, Converter={StaticResource negate}, Mode=OneWay}"
                          ItemsSource="{Binding Cameras, Mode=OneWay}"
                          SelectedItem="{Binding SelectedCamera, Mode=OneWay}"/>
                <ToggleButton Name="tbnToggleCamera"
                              IsEnabled="{Binding HasSelectedCamera, Mode=OneWay}"
                              IsChecked="{Binding IsCameraCapturing, Mode=OneWay}"
                              Command="{x:Static commands:ToggleCamera.Instance}" />
            </WrapPanel>

            <Grid Grid.Row="1" Grid.ColumnSpan="2"
                  Background="Black"
                  ClipToBounds="True">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCameraCapturing, Mode=OneWay}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <DockPanel RenderTransformOrigin="0.5,0.5">
                    <DockPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="{Binding Scale, Mode=OneWay}"
                                            ScaleY="{Binding Scale, Mode=OneWay}"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="{Binding OffsetX, Mode=OneWay}"
                                                Y="{Binding OffsetY, Mode=OneWay}"/>
                        </TransformGroup>
                    </DockPanel.RenderTransform>
                    <Grid>
                        <Image Source="{Binding CameraFrame, Mode=OneWay}"
                               Stretch="None"/>
                        <Canvas x:Name="cnvViewportTopLayer">
                            <Ellipse Width="{Binding CursorSize, Mode=OneWay}"
                                     Height="{Binding CursorSize, Mode=OneWay}"
                                     Stroke="{Binding CursorBrush, Mode=OneWay}"
                                     StrokeThickness="4"
                                     Canvas.Left="{Binding CursorX, Mode=OneWay}"
                                     Canvas.Top="{Binding CursorY, Mode=OneWay}"/>
                        </Canvas>
                    </Grid>
                </DockPanel>
            </Grid>
        </Grid>
        <StackPanel Grid.RowSpan="100" Grid.ColumnSpan="100"
                    VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasHandTrackers, Mode=OneWay}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock FontSize="46"
                   Foreground="#BBBBBB"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Hand tracking is not available">
            </TextBlock>
            <Separator Margin="12"
                       MaxWidth="892"/>
            <TextBlock FontSize="16"
                       Foreground="#BBBBBB"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"
                       Text="Leap Motion is not installed">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHandTrackerReady, Mode=OneWay}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock FontSize="16"
                       Foreground="#BBBBBB"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="Visible"
                       Text="No Leap Motion devices attached">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasHandTrackers, Mode=OneWay}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
