<Window x:Class="HandTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandTracker"
        xmlns:commands="clr-namespace:HandTracker.Commands"
        xmlns:conv="clr-namespace:HandTracker.Converters"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Hand tracker"
        Height="450" Width="800">

    <Window.Resources>
        <conv:Negate x:Key="negate"/>
    </Window.Resources>
    
    <Grid>
        <StackPanel Grid.RowSpan="100" Grid.ColumnSpan="100"
                    VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasHandTrackers}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <TextBlock FontSize="46"
                   Foreground="#BBBBBB"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Hand tracking is not available">
            </TextBlock>
            <Separator Margin="12"
                       MaxWidth="892"/>
            <TextBlock FontSize="16"
                       Foreground="#BBBBBB"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"
                       Text="Leap Motion is not installed">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHandTrackerReady}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock FontSize="16"
                       Foreground="#BBBBBB"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="Visible"
                       Text="No Leap Motion devices attached">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasHandTrackers}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
        
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsHandTrackerReady}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" Grid.Column="0"
                       HorizontalAlignment="Center"
                       Margin="12">
                <Label VerticalAlignment="Center">Tracking device</Label>
                <ComboBox MinWidth="160"
                          Margin="12,0"
                          IsEnabled="{Binding ElementName=tbnToggleTrackingDevice, Path=IsChecked, Converter={StaticResource negate}}"
                          ItemsSource="{Binding HandTrackers}"
                          SelectedItem="{Binding SelectedHandTracker}"/>
                <ToggleButton Name="tbnToggleTrackingDevice"
                              IsEnabled="{Binding HasSelectedHandTracker}"
                              Command="{x:Static commands:ToggleHandTracker.Instance}" />
            </WrapPanel>

            <WrapPanel Grid.Row="0" Grid.Column="1"
                       HorizontalAlignment="Center"
                       Margin="12">
                <Label VerticalAlignment="Center">Camera</Label>
                <ComboBox MinWidth="160"
                          Margin="12,0"
                          IsEnabled="{Binding ElementName=tbnToggleCamera, Path=IsChecked, Converter={StaticResource negate}}"
                          ItemsSource="{Binding Cameras}"
                          SelectedItem="{Binding SelectedCamera}"/>
                <ToggleButton Name="tbnToggleCamera"
                              IsEnabled="{Binding HasSelectedCamera}"
                              Command="{x:Static commands:ToggleCamera.Instance}" />
            </WrapPanel>

            <Grid Grid.Row="1" Grid.ColumnSpan="2"
                  Background="Black">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCameraCapturing}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Image Margin="12"
                   Source="{Binding CameraFrame}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
